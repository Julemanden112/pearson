    <script>
        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        boxWidth: 15,
                        padding: 15,
                    }
                },
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            return Array.isArray(label) ? label.join(' ') : label;
                        }
                    }
                }
            }
        };

        const chartColors = ['#00A0B0', '#6A4A3C', '#CC333F', '#EB6841'];
        const chartLabels = ['Traditional Mgmt', 'HR Mgmt', 'Communication', 'Networking'];

        new Chart(document.getElementById('avgManagerChart'), {
            type: 'pie',
            data: {
                labels: chartLabels,
                datasets: [{ data: [32, 20, 29, 19], backgroundColor: chartColors }]
            },
            options: chartOptions
        });

        new Chart(document.getElementById('successManagerChart'), {
            type: 'pie',
            data: {
                labels: chartLabels,
                datasets: [{ data: [13, 11, 28, 48], backgroundColor: chartColors }]
            },
            options: chartOptions
        });
        
        new Chart(document.getElementById('effectiveManagerChart'), {
            type: 'pie',
            data: {
                labels: chartLabels,
                datasets: [{ data: [19, 26, 44, 11], backgroundColor: chartColors }]
            },
            options: chartOptions
        });
    </script>
